@using Microsoft.AspNetCore.Identity
@using Destination_Lajet.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {

        <li class="nav-item mx-1">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Welcome @User.Identity.Name!</a>
        </li>

        @if (User.IsInRole("Admin"))
        {
            <li class="nav-item mx-1">
                <a class="btn btn-outline-danger" asp-page="/Admin/ManageUsers">Manage users</a>
            </li>
}
        @if (User.IsInRole("Organizer"))
        {
            <li class="nav-item mx-1">
                <a class="btn btn-success" asp-page="/Organizer/OrganizeEvent">Organize Events</a>
            </li>
            <li class="nav-item mx-1">
                <a class="btn btn-success" asp-page="/Organizer/AddEvent">Add Event</a>
            </li>
}

        <li class="nav-item mx-1">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-danger">Logout</button>
            </form>
        </li>
 }

    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
}
</ul>